{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.morphql.injection",
  "injectionSelector": "L:source.ts -comment -string, L:source.js -comment -string, L:source.tsx -comment -string, L:source.jsx -comment -string",
  "patterns": [
    {
      "comment": "MorphQL in tagged template strings with morphql tag",
      "name": "meta.embedded.block.morphql",
      "begin": "(?i)(morphQL)\\s*(`)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tagged-template.morphql"
        },
        "2": {
          "name": "punctuation.definition.string.template.begin.ts"
        }
      },
      "end": "(?<!\\\\)`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.ts"
        }
      },
      "patterns": [
        {
          "include": "source.morphql"
        }
      ]
    },
    {
      "comment": "MorphQL in template strings after // @morphql comment",
      "name": "meta.embedded.block.morphql",
      "begin": "(?i)(?<=//\\s*@morphql\\s*\\n)\\s*(?:const|let|var)\\s+\\w+\\s*=\\s*(`)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.string.template.begin.ts"
        }
      },
      "end": "(?<!\\\\)`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.ts"
        }
      },
      "patterns": [
        {
          "include": "source.morphql"
        }
      ]
    }
  ]
}
