{
  "MorphQL Tagged Template": {
    "prefix": "morphql-tagged",
    "body": [
      "const ${1:query} = morphQL`",
      "  from ${2|json,xml,object|} to ${3|json,xml,object|}",
      "  transform",
      "    set ${4:field} = ${5:value}",
      "    $0",
      "`;"
    ],
    "description": "MorphQL query with tagged template"
  },
  "MorphQL Comment Hint": {
    "prefix": "morphql-comment",
    "body": [
      "// @morphql",
      "const ${1:query} = `",
      "  from ${2|json,xml,object|} to ${3|json,xml,object|}",
      "  transform",
      "    set ${4:field} = ${5:value}",
      "    $0",
      "`;"
    ],
    "description": "MorphQL query with comment hint"
  },
  "MorphQL Compile and Execute": {
    "prefix": "morphql-compile",
    "body": [
      "const ${1:query} = morphQL`",
      "  from ${2|json,xml,object|} to ${3|json,xml,object|}",
      "  transform",
      "    set ${4:field} = ${5:value}",
      "`;",
      "",
      "const engine = await compile(${1:query});",
      "const result = engine(${6:sourceData});",
      "$0"
    ],
    "description": "Complete MorphQL compile and execute pattern"
  }
}
